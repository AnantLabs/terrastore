<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">


    <!--
        Configure here your terrastore.store.operators.Function.
        As an alternative, you may want to annotate your function with terrastore.annotation.AutoDetect: Terrastore
        will autodetect your annotated class, create an instance and autowire it here.

        Functions manually declared here overwrite autodetected ones: this means that if a manually declared function
        has the same name (entry key) of an autodetcted one, the latter will not be wired.
    -->

    <util:map id="functions">

        <entry key="replace">
            <bean class="terrastore.store.functions.ReplaceFunction"/>
        </entry>

        <entry key="js">
            <bean class="terrastore.store.functions.JSFunction"/>
        </entry>
        
        <entry key="counter">
        	<bean class="terrastore.store.functions.AtomicCounterFunction"/>
        </entry>

        <entry key="size">
        	<bean class="terrastore.store.functions.SizeMapper"/>
        </entry>

    </util:map>

</beans>
