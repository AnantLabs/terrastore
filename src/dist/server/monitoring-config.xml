<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="mbeanServer" class="org.springframework.jmx.support.MBeanServerFactoryBean">
        <property name="locateExistingServerIfPossible" value="true"/>
    </bean>

    <bean id="mbeanExporter" class="org.springframework.jmx.export.MBeanExporter">
        <property name="beans">
            <map>
                <entry key="terrastore.monitoring:name=ClusterMonitoring" value-ref="clusterMonitoring"/>
            </map>
        </property>
        <property name="server" ref="mbeanServer"/>
    </bean>

    <bean id="clusterMonitoring" class="terrastore.monitoring.jmx.JMXClusterMonitoring">
        <constructor-arg ref="mbeanServer"/>
        <constructor-arg ref="router"/>
    </bean>

    <bean id="clusterMonitoringTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
        <property name="delay" value="0"/>
        <property name="period" value="60000"/>
        <property name="timerTask" ref="clusterMonitoringInvoker"/>
    </bean>

    <bean id="clusterMonitoringInvoker" class="org.springframework.scheduling.timer.MethodInvokingTimerTaskFactoryBean">
        <property name="targetObject" ref="clusterMonitoring"/>
        <property name="targetMethod" value="update"/>
    </bean>

    <bean id="monitoringTimer" class="org.springframework.scheduling.timer.TimerFactoryBean">
        <property name="daemon" value="true"/>
        <property name="scheduledTimerTasks">
            <list>
                <ref bean="clusterMonitoringTask" />
            </list>
        </property>
    </bean>

</beans>
