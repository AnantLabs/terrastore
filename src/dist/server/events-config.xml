<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">


    <!--
        Configure here your event listeners, see terrastore.event.EventListener.
    -->

    <util:list id="event-listeners">
    </util:list>

    <!--
        Configured here the desired event bus implementation.
    -->

    <bean id="eventBus" class="terrastore.event.impl.AsyncEventBus">
        <constructor-arg ref="event-listeners"/>
    </bean>

</beans>
