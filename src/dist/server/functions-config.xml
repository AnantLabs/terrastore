<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">


    <!--
        Configure here your update functions, used to atomically update values.

        Each entry key is the function name that will be used in Terrastore query string for server-side updates, e.g.:
        http://localhost:8080/bucket/key/update?function=name&...
    -->

    <util:map id="update-functions">

        <entry key="replace">
            <bean class="terrastore.service.functions.ReplaceFunction"/>
        </entry>

    </util:map>

</beans>
